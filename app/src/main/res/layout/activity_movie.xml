<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MovieActivity">

    <ImageView
        android:id="@+id/image_view_cover_movie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/shadows"
        app:layout_constraintDimensionRatio="16:10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:src="@drawable/play_button"
        app:layout_constraintEnd_toEndOf="@id/image_view_cover_movie"
        app:layout_constraintStart_toStartOf="@id/image_view_cover_movie"
        app:layout_constraintTop_toTopOf="@id/image_view_cover_movie"
        app:layout_constraintBottom_toBottomOf="@id/image_view_cover_movie"
        />
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/image_view_cover_movie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Esquadrão Suicida"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/text_view_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="O governo dos Estados Unidos ordena o recrutamento dos piores criminosos para uma importante missão, que visa acabar com uma entidade misteriosa e aparentemente impossível de se derrotar. É justamente isso que o governo precisa, de bandidos que praticamente não têm nada a perder. Mas será que eles estão dispostos a arriscarem suas vidas em nome da lei?"
        android:textColor="@color/colorGrayLight"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingExtra="3sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_cover_movie"/>

    <TextView
        android:id="@+id/text_view_cast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Mas será que eles estão dispostos a arriscarem suas vidas em nome da lei?"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="3sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_desc"/>
    <TextView
        android:id="@+id/text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/similiar"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_cast"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="14sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_similar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/movie_item_similar"/>


</androidx.constraintlayout.widget.ConstraintLayout>